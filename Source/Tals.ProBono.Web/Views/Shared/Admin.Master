<%@ Master Language="C#" MasterPageFile="Site.Master" Inherits="System.Web.Mvc.ViewMasterPage" %>
<%@ Import Namespace="Tals.ProBono.Web.Models.Shared" %>
<%@ Import Namespace="Tals.ProBono.Web.Enums" %>
<%@ Import Namespace="Tals.ProBono.Domain.Constants" %>
<asp:Content runat="server" ID="Title" ContentPlaceHolderID="TitleContent">
    <asp:ContentPlaceHolder ID="TitleContent" runat="server" />
</asp:Content>
<asp:Content runat="server" ID="Head" ContentPlaceHolderID="HeadContent">
    <link href="/Content/jquery-cleditor/jquery.cleditor.css" rel="stylesheet" type="text/css"/>
    <asp:ContentPlaceHolder ID="HeadContent" runat="server" />
</asp:Content>
<asp:Content runat="server" ID="TabMenu" ContentPlaceHolderID="TabMenuContent">
    <asp:ContentPlaceHolder runat="server" ID="TabMenuContent">
    <ul id="tabmenu">
        <%: Html.ActionMenuItem("Questions", "List", "Admin") %>
        <%: Html.ActionMenuItem("Users", "AccountList", "Admin") %>
        <%: Html.ActionMenuItem("Reporting", "Index", "Reporting") %>
        <%: Html.ActionMenuItem("Attorney View", "List", "Attorney") %>
        <%: Html.ActionMenuItem("Forums", "Index", "Forums") %>
        <%: Html.ActionMenuItem("Manage Settings", "Index", "Settings") %>
    </ul>
    </asp:ContentPlaceHolder>
</asp:Content>
<asp:Content runat="server" ID="QuickLinks" ContentPlaceHolderID="QuickLinksContent">
    <asp:ContentPlaceHolder runat="server" ID="QuickLinksContent">
        <h2 class="quicklinksheader">Admin Quick Links</h2>
        <div id="categories">
        <ul>
            <li><%: Html.ActionLink("Attorney View", "List", "Attorney") %></li>
        </ul>
        </div>
    </asp:ContentPlaceHolder>
</asp:Content>
<asp:Content runat="server" ID="Main" ContentPlaceHolderID="MainContent">
    <% 
       if (ViewData[ApplicationConstants.LAST_MESSAGE_KEY] != null)
       {
           var message = ViewData[ApplicationConstants.LAST_MESSAGE_KEY] as MessageDto;

           if (message != null)
           {
               var messageDisplay = String.Empty;
               
               switch (message.Type)
               {
                    case MessageTypes.Success:
                       messageDisplay = "<div class='message-display' style='color: green;'><i class='fa fa-check-circle fa-2x'></i> " + message.Text + "</div>";
                       break;
                    case MessageTypes.Error:
                       messageDisplay = "<div class='message-display' style='color: red;'><i class='fa fa-exclamation-circle fa-2x'></i> " + message.Text + "</div>";
                       break;
                    case MessageTypes.Warning:
                       messageDisplay = "<div class='message-display' style='color: orange;'><i class='fa fa-exclamation-triangle fa-2x'></i> " + message.Text + "</div>";
                       break;
                   default:
                       messageDisplay = "<div class='message-display' style='color: blue;'><i class='fa fa-question-circle fa-2x'></i> " + message.Text + "</div>";
                       break;
               }
               
               %><%=messageDisplay%><%
           }
       }
    %>
    <asp:ContentPlaceHolder runat="server" ID="MainContent" />
</asp:Content>

<asp:Content runat="server" ID="AdminScripts" ContentPlaceHolderID="Scripts">
    <script src="/Scripts/jquery-cleditor/jquery.cleditor.min.js" type="text/javascript"></script> 
    <asp:ContentPlaceHolder runat="server" ID="Scripts" />
</asp:Content>